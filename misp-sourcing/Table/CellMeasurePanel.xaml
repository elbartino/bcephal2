<Grid x:Class="Misp.Sourcing.Table.CellMeasurePanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignWidth="300" Background="White">

    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="2*"/>
        <ColumnDefinition x:Name="FormulaCol" Width="1*"/>
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <Label x:Name="valuelabel" Grid.Row="0" Grid.Column="0" Content="Value" FontSize="9" Margin="2 2"/>
    <TextBox x:Name="valueTextBox" IsEnabled="False" Grid.Row="1" Grid.Column="0" Margin="2 2"/>

    <Label x:Name="formulalabel" Grid.Row="0" Grid.Column="1" Content="Formula" FontSize="9" Margin="2 2"/>
    <TextBox x:Name="formulaTextBox" Grid.Row="1" Grid.Column="1" Margin="2 2"/>

</Grid>
