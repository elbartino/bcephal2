<Grid x:Class="Misp.Reconciliation.Posting.PostingBrowserForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:filter="clr-namespace:Misp.Reconciliation.Posting"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">

    <Grid.RowDefinitions>
        <RowDefinition x:Name="filterRow" Height="Auto"/>
        <RowDefinition x:Name="GridRow" Height="*"/>
        <RowDefinition x:Name="toolBarRow" Height="Auto"/>
    </Grid.RowDefinitions>

    <filter:PostingFilterForm x:Name="filterForm" x:FieldModifier="public" Margin="2" Grid.Row="0"/>
    <filter:PostingGrid x:Name="grid" x:FieldModifier="public" Grid.Row="1"/>
    <GridSplitter x:Name="splitter" Height="5" ResizeDirection="Rows" Background="#FFFBF8F8"
                          VerticalAlignment="Top" HorizontalAlignment="Stretch" Grid.Row="1"/>
    <filter:PostingToolBar x:Name="toolBar" x:FieldModifier="public" Grid.Row="2"/>

</Grid>
