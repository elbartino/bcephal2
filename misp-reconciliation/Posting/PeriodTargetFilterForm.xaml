<Grid x:Class="Misp.Reconciliation.Posting.PeriodTargetFilterForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:src="clr-namespace:Misp.Sourcing.Table;assembly=Misp.Sourcing" 
             mc:Ignorable="d" Background="White">
    
    <Grid.RowDefinitions>
        <RowDefinition x:Name="TargetFilter" Height="*"/>
        <RowDefinition x:Name="PeriodFilter" Height="*"/>
    </Grid.RowDefinitions>
    <GroupBox Grid.Row="0" Grid.Column="0" x:Name="targetFilterGroupBox" Header="Filter">
        <src:TargetPanel  x:Name="targetFilter" x:FieldModifier="public" />
    </GroupBox>            
    <GroupBox Grid.Row="1" Grid.Column="0" x:Name="periodfFilterGroupBox" Header="Period"  >
        <src:RPeriodPanel x:Name="periodFilter" x:FieldModifier="public" />
    </GroupBox>            
                
</Grid>
