<Grid x:Class="Misp.Reconciliation.WriteOffConfig.WriteOffElements.WriteOffLine"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" Margin="5 5 0 5" Background="White">    
    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="150"/>
        <ColumnDefinition Width="115"/>
    </Grid.ColumnDefinitions>
    <Label  Grid.Column="0" x:Name="nameLabel" HorizontalAlignment="Right"/>
    <ComboBox  Grid.Column="2" x:Name="valueCombobox" />
    <DatePicker  Grid.Column="2" x:Name="valueDatePicker" />
    <TextBox Grid.Column="2" x:Name="incrementalValueTextBox" IsEnabled="False" Text="Incremental value..." Visibility="Collapsed"/>
</Grid>

