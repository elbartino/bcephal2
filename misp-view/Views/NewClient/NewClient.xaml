<UserControl x:Class="misp_view.Views.NewClient.NewClient"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             Width="615" Height="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"></ColumnDefinition>
            <ColumnDefinition Width="300"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0" Margin="0,30,0,0">
            <Label Content="Company" FontWeight="Bold"></Label>
            <StackPanel Margin="50,30,0,0">
                <Label Content="Client ID " Height="30" HorizontalAlignment="Right"></Label>
                <Label Content="Company Name " Height="30" HorizontalAlignment="Right"></Label>
                <Label Content="Legal Form " Height="30" HorizontalAlignment="Right"></Label>
                <Label Content="VAT n° " Height="30" HorizontalAlignment="Right"></Label>
                <Label Content="Street " Height="30" HorizontalAlignment="Right"></Label>
                <Label Content="N° " Height="30" HorizontalAlignment="Right"></Label>
                <Label Content="City Code " Height="30" HorizontalAlignment="Right"></Label>
                <Label Content="City " Height="30" HorizontalAlignment="Right"></Label>
            </StackPanel>
            <Label Content="Contact Person" FontWeight="Bold" Margin="0,270,0,0"></Label>
            <StackPanel Margin="50,300,0,0">
                <Label Content="First Name " Height="30" HorizontalAlignment="Right"></Label>
                <Label Content="Last Name " Height="30" HorizontalAlignment="Right"></Label>
                <Label Content="Email " Height="30" HorizontalAlignment="Right"></Label>
            </StackPanel>
            <Label Content="Account" FontWeight="Bold" Margin="0,390,0,0"></Label>
            <StackPanel Margin="30,420,0,0">
                <Label Content="Scheme " Height="30" HorizontalAlignment="Right"></Label>
                <TextBox HorizontalAlignment="Right" BorderBrush="Transparent" Width="50" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" Height="25"></TextBox>
            </StackPanel>
            <Label Content="Status" FontWeight="Bold" Margin="0,490,0,0"></Label>
            
    </Grid>
        <Grid Grid.Column="1" Margin="0,60,0,0">
            <StackPanel Margin="20,0,0,0">
                <TextBox Height="25" Width="200" BorderBrush="Transparent" HorizontalAlignment="Left" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"/>
                <Label Height="5"></Label>
                <TextBox Height="25" Width="200" BorderBrush="Transparent" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" HorizontalAlignment="Left"/>
                <Label Height="5"></Label>
                <TextBox Height="25" Width="200" BorderBrush="Transparent" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" HorizontalAlignment="Left"/>
                <Label Height="5"></Label>
                <TextBox Height="25" Width="200" BorderBrush="Transparent" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" HorizontalAlignment="Left"/>
                <Label Height="5"></Label>
                <TextBox Height="25" Width="200" BorderBrush="Transparent" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" HorizontalAlignment="Left"/>
                <Label Height="5"></Label>
                <TextBox Height="25" Width="200" BorderBrush="Transparent" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" HorizontalAlignment="Left"/>
                <Label Height="5"></Label>
                <TextBox Height="25" Width="200" BorderBrush="Transparent" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" HorizontalAlignment="Left"/>
                <Label Height="5"></Label>
                <TextBox Height="25" Width="200" BorderBrush="Transparent" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" HorizontalAlignment="Left"/>
            </StackPanel>
            <StackPanel Margin="20,265,0,0">
                <Label Height="5"></Label>
                <TextBox Height="25" Width="200" BorderBrush="Transparent" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" HorizontalAlignment="Left"/>
                <Label Height="5"></Label>
                <TextBox Height="25" Width="200" BorderBrush="Transparent" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" HorizontalAlignment="Left"/>
                <Label Height="5"></Label>
                <TextBox Height="25" Width="200" BorderBrush="Transparent" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" HorizontalAlignment="Left"/>
            </StackPanel>
            <StackPanel Margin="20,390,0,0">
                <Label Content="Pre-funding Account" Height="30"></Label>
                <TextBox Height="25" Width="200" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" BorderBrush="Transparent"  HorizontalAlignment="Left"/>
            </StackPanel>
            <ComboBox HorizontalAlignment="Left" Height="25" BorderBrush="Transparent" Width="200" Margin="20,400,0,0" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
                <ComboBoxItem Content="Passive"></ComboBoxItem>
                <ComboBoxItem Content="Active"></ComboBoxItem>
                <ComboBoxItem Content="Under Risk Control"></ComboBoxItem>
                <ComboBoxItem Content="Default"></ComboBoxItem>
                <ComboBoxItem Content="Closed"></ComboBoxItem>
            </ComboBox>
        </Grid>
    </Grid>
</UserControl>
