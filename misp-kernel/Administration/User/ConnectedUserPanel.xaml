<Grid x:Class="Misp.Kernel.Administration.User.ConnectedUserPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" >
    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="Auto"/>
        <ColumnDefinition Width="Auto"/>
        <ColumnDefinition Width="Auto"/>
        <ColumnDefinition Width="Auto"/>
    </Grid.ColumnDefinitions>
    <Label Content="Logged in as "/>
    <TextBlock  Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0">
        <Hyperlink x:Name="UserLink" NavigateUri="http://localhost//bcephal//user">
            <TextBlock x:Name="UserTextBlock" Text=""/>
        </Hyperlink>
    </TextBlock>
    <TextBlock  Grid.Column="2" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="15 0">
        <Hyperlink x:Name="MyAccountLink" NavigateUri="http://localhost//bcephal//my-account">
            <TextBlock Text="My Account"/>
        </Hyperlink>
    </TextBlock>
    <TextBlock Grid.Column="3" HorizontalAlignment="Right" VerticalAlignment="Center">
        <Hyperlink x:Name="SingOutLink" NavigateUri="http://localhost//bcephal//sing-out" >
            <TextBlock Text="Sing out"/>
        </Hyperlink>
    </TextBlock>
</Grid>
