<Grid x:Class="Misp.Kernel.Ui.Administration.ProfileMainPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:admin="clr-namespace:Misp.Kernel.Ui.Administration"
             mc:Ignorable="d">

    <Grid.ColumnDefinitions>
        <ColumnDefinition/>
        <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
        <RowDefinition/>
        <RowDefinition/>
        <RowDefinition/>
    </Grid.RowDefinitions>
    <Label Grid.Column="0" Grid.Row="0" Content="Name"/>
    <TextBox Grid.Column="1" Grid.Row="0" />
    <Label Grid.Column="0" Grid.Row="1"  Content="Active"/>
    <CheckBox Grid.Column="1" Grid.Row="1" />
    <Label Grid.Column="0" Grid.Row="2" Content="Rights"/>
    <admin:FunctionnalityGrid  Grid.Column="1" Grid.Row="2" />
</Grid>

