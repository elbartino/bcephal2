<UserControl x:Class="Misp.Kernel.Ui.Base.Dimension.DimensionItemTextBlock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:src="clr-namespace:Misp.Kernel.Ui.Base.Dimension"
             mc:Ignorable="d" 
             d:DesignHeight="110" d:DesignWidth="330">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel>
            <TextBlock x:Name="DimensionItemTB" TextWrapping="Wrap" Height="Auto" Width="Auto">
         
          <src:DimensionElement /><src:DimensionElement /><src:DimensionElement />
          <src:DimensionElement /><src:DimensionElement /><src:DimensionElement />

        </TextBlock>
            <GridSplitter Margin="5" HorizontalAlignment="Stretch" Height="2" Width="5000"/>
        </StackPanel>
    </ScrollViewer>
</UserControl>
