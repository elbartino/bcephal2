<UserControl x:Class="Misp.Kernel.Ui.Base.Dimension.DimensionElement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:src="clr-namespace:Misp.Kernel.Ui.Base.Dimension" 
             mc:Ignorable="d" 
             d:DesignHeight="35" d:DesignWidth="110">
    <Border BorderBrush="Black" BorderThickness="2" CornerRadius="5">
    <Grid >
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="75"/>
            <ColumnDefinition Width="25"/>
        </Grid.ColumnDefinitions>
        
            <Label x:Name="DimElemLabel" Grid.Column="0" HorizontalAlignment="Left" Content="Label" Height="35" Width="75" />
            <Button x:Name="DimElemCloseButton" Grid.Column="1" Height="35" Width="25" ToolTip="Remove element">
                <Button.Template>
                    <ControlTemplate>
                        <Image Source="/bcephal;Component/Resources/Images/Icons/DeleteButton.png"/>
                    </ControlTemplate>
                </Button.Template>
            </Button>
       
    </Grid>
    </Border>
</UserControl>
