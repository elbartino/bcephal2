<dxlc:Tile x:Class="Misp.Kernel.Ui.Dashboard.NavDashboardBlock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
             Height="60" Width="142" Click="OnClick" MouseRightButtonDown="OnMouseRightButtonDown"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">

    <dxlc:Tile.Resources>
        <ContextMenu x:Key="block_context_menu" >
            <MenuItem Header="Edit" x:Name="EditMenu" Click="OnEdit"/>
            <MenuItem Header="Hide"  x:Name="HideMenu" Click="OnHide"/>
        </ContextMenu>
    </dxlc:Tile.Resources>
    
</dxlc:Tile>
