<dxnav:TileNavPane x:Class="Misp.Kernel.Ui.Dashboard.NavDashboardBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
             xmlns:dxnav="http://schemas.devexpress.com/winfx/2008/xaml/navigation"             
             xmlns:src="clr-namespace:Misp.Kernel.Ui.Dashboard"
             Width="auto" Background="#FF839BBB" ContinuousNavigation="True" ClipToBounds="False" CloseOnOuterClick="True"                   
             mc:Ignorable="d" d:DesignHeight="60" d:DesignWidth="500">

    <dxnav:TileNavPane.NavButtons >
        <dxnav:NavButton x:Name="StandardNavButton" Content="Standard" AllowGlyphTheming="True"  Glyph="{dx:DXImageGrayscale Image=Customization_32x32.png}" />

    </dxnav:TileNavPane.NavButtons>

</dxnav:TileNavPane>
