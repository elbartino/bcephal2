<Grid x:Class="Misp.Kernel.Ui.Dashboard.DashboardConfigurationForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" Height="auto" Width="auto">

    <Grid.RowDefinitions>
        <RowDefinition Height="auto" />
        <RowDefinition Height="auto" />
        <RowDefinition Height="auto" />
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="auto"/>
        <ColumnDefinition Width="*" />
        <ColumnDefinition Width="auto" />
    </Grid.ColumnDefinitions>

    <Label Content="Block" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Right" Margin="5"/>
    <TextBox x:Name="BloackTextBox" IsEnabled="False" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" Margin="5"/>

    <Label Content="Max items" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Right" Margin="5"/>
    <TextBox x:Name="MaxTextBox" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Margin="5"/>

    <Label Content="Order by" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Right" Margin="5"/>
    <ComboBox x:Name="OrderByComboBox" Grid.Row="2" Grid.Column="1" Margin="5"/>
    <ComboBox x:Name="OrderByDirectionComboBox" Grid.Row="2" Grid.Column="2" Width="70" Margin="5"/>

</Grid>
