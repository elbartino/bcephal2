<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="{x:Type Label}">
        <Setter Property="TextElement.FontSize" Value="12"/>
        <Setter Property="TextElement.Foreground" Value="Black"/>
    </Style>

    <Style TargetType="{x:Type RadioButton}">
        <Setter Property="TextElement.FontSize" Value="12"/>
        <Setter Property="TextElement.Foreground" Value="Black"/>        
    </Style>

    <Style x:Key="BluePanelBorderStyle">
        <Setter Property="Border.CornerRadius" Value="10"/>
        <Setter Property="Border.BorderThickness" Value="1"/>
        <Setter Property="Border.BorderBrush" Value="#FFDCE6F2"/>
    </Style>

    <Style x:Key="BluePanelStyle">
        <Setter Property="Control.Width" Value="350"/>
        <Setter Property="Control.Height" Value="300"/>
        <Setter Property="Control.Margin" Value="5,5,5,5"/>
        <Setter Property="Control.HorizontalAlignment" Value="Center"/>
        <Setter Property="Control.VerticalAlignment" Value="Top"/>
        <Setter Property="Control.FontSize" Value="14"/>
        <!--<Setter Property="Control.Foreground" Value="#FF002060"/>-->
        <Setter Property="Control.Background" Value="#FFDCE6F2"/>
        <Setter Property="Control.BorderBrush" Value="#FFDCE6F2"/>
        <Setter Property="Border.CornerRadius" Value="10"/>
        <Setter Property="Border.BorderThickness" Value="1"/>
        <Setter Property="Border.BorderBrush" Value="#FFDCE6F2"/>

        <Setter Property="Control.BitmapEffect">
            <Setter.Value>
                <DropShadowBitmapEffect ShadowDepth="4" Color="#FFADADAD" Direction="320" Softness="0.3" Opacity="1"/>
            </Setter.Value>
        </Setter>
    </Style>

