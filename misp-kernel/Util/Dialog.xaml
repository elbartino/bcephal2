<Window x:Class="Misp.Kernel.Util.Dialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Icon="/bcephal;Component/Resources/Images/Logo/bcephal.ico"
        Title="Dialog" Height="auto" Width="auto">

    <Grid x:FieldModifier="public" x:Name="grid">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="35"/>
        </Grid.RowDefinitions>
        <ScrollViewer x:Name="mainPanel" Margin="5" Grid.Row="0" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"/>
        <StackPanel x:FieldModifier="public" x:Name="buttonPanel" Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="1" Background="#00000000">
            <Button x:Name="okButton" Content="OK" Click="OkButtonClick" Width="60" Margin="5"/>
            <Button x:Name="cancelButton" Content="Cancel" Click="CancelButtonClick" Width="60" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
