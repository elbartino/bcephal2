<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Animation="clr-namespace:Misp.Kernel.Util"
        x:Class="Misp.Kernel.Task.MaskDialog"
        WindowStartupLocation="CenterScreen" WindowStyle="None"
        AllowsTransparency="True" Height="150" Width="450"
        Background="Transparent"
        >

    <Grid>
        <StackPanel x:Name="panel" VerticalAlignment="Center">
            <Animation:AnimatedGIFControl x:Name="loadingImage" Width="70"/>
            <TextBlock x:FieldModifier="public" x:Name="MessageTextBlock" TextWrapping="Wrap" Text="Busy...Please Wait" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center" />
        </StackPanel>
    </Grid>

</Window>
